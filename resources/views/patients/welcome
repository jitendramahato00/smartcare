    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');

            // Function to toggle sidebar
            function toggleSidebar() {
                sidebar.classList.toggle('collapsed');
                content.classList.toggle('expanded');
            }

            // Attach click event listener to the hamburger icon
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function(event) {
                    event.preventDefault(); // Prevent default link behavior
                    toggleSidebar();
                });
            }

            // Optional: Close sidebar on smaller screens when clicking outside (or using Bootstrap's offcanvas)
            // For this fixed sidebar, we'll rely solely on the toggle button.
            // For mobile, the sidebar is initially collapsed and activated by the toggle.
            // The existing CSS media query handles initial state for small screens.
        });
    </script>
